<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="main_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin10</item>
        <item name="android:layout_marginEnd">@dimen/margin10</item>
        <item name="android:layout_marginBottom">@dimen/margin10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/size22</item>
        <item name="cornerRadius">@dimen/button_margin</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/padding8</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="settings_button_style" parent="Widget.MaterialComponents.Button.UnelevatedButton">
    <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:padding">@dimen/size16</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    <item name="android:outlineProvider">none</item>
    <item name="elevation">@dimen/zero</item>
    <item name="iconPadding">@dimen/zero</item>
    <item name="iconTint">?attr/colorOnSecondary</item>
    </style>


    <style name="TintedNavigation" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">?attr/colorOnPrimary</item>
    </style>

    <style name = "text_settings" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:padding">@dimen/size16</item>
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
        <item name="android:outlineProvider">none</item>
        <item name="iconTint">?attr/colorOnSecondary</item>
    </style>

    <style name="ToolbarStyle">
        <item name="android:background">?attr/colorPrimaryVariant</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/size22</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="LinearLayout">
        <item name ="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/size61dp</item>
        <item name="android:padding">@dimen/size16</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="title">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/size16</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="artistStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="android:textSize">@dimen/size11</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

</resources>